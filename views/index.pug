extends layout
block content
    main
        .row.justify-content-center
            .col-lg-6.container3.text-white.p-5
                .container4
                    h3.text-center
                        | We 
                        span.spn RISE  
                        | by lifting others.
                .container.pt-3
                    form(name='myForm', action='/paystack/pay', method='POST')
                        input#name(type='text', name='full_name', placeholder='Full Name')
                        hr
                        input#email(type='email', name='email', placeholder='Email')
                        hr
                        select(name='amount')
                            option Select Amount in Dollars
                            option(value='1') 1
                            option(value='5') 5
                            option(value='10') 10
                            option(value='50') 50
                            option(value='100') 100
                            option(value='500') 500
                            option(value='1000') 1000
                        .bttn.pt-2
                            button(type='submit') DONATE